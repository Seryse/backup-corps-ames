rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /formations/{formationId} {
      allow read: if true;
      // This should be restricted to admin users via custom claims in a real app.
      // For now, any authenticated user can write.
      allow write: if request.auth != null;
    }

    match /users/{userId}/formations/{formationId} {
      allow read, write: if isOwner(userId);
    }

    match /subtitles/{sessionId} {
      allow read: if true;
      // This should be restricted to admin users. For now, any authenticated user can write.
      allow write: if request.auth != null;
    }

    match /news/{newsId} {
      allow read: if true;
      // This should be restricted to admin users via custom claims in a real app.
      // For now, any authenticated user can write.
      allow write: if request.auth != null;
    }
  }
}
