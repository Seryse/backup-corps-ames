rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---
    function isAuth() {
      return request.auth != null;
    }

    // L'UID 'HvsOFzrOwFTHWTBVBextpZtV5I53' est utilisé pour identifier l'admin.
    function isAdmin() {
      return isAuth() && request.auth.uid == 'HvsOFzrOwFTHWTBVBextpZtV5I53';
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Autorise la mise à jour d'un créneau uniquement pour incrémenter le nombre de participants.
    function isBookingIncrement(before, after) {
      return after.bookedParticipantsCount == before.bookedParticipantsCount + 1
          && after.sessionTypeId == before.sessionTypeId
          && after.startTime == before.startTime
          && after.endTime == before.endTime;
    }

    // --- Règles par Collection ---

    // 1. Profils Utilisateurs (/users/{userId})
    match /users/{userId} {
      allow get, write: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
    }

    // 2. Formations acquises par l'utilisateur (/users/{userId}/formations/{userFormationId})
    match /users/{userId}/formations/{userFormationId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /{path=**}/formations/{userFormationId} {
        allow read: if isAdmin();
    }

    // 3. Catalogue de formations (/formations/{formationId})
    match /formations/{formationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Actualités (/news/{newsId})
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. Types de session (/sessionTypes/{sessionTypeId})
    match /sessionTypes/{sessionTypeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. Créneaux horaires (/timeSlots/{timeSlotId})
    match /timeSlots/{timeSlotId} {
      allow read: if true;
      allow write: if isAdmin();
      allow update: if isAuth() && isBookingIncrement(resource.data, request.resource.data);
    }

    // 7. SESSIONS (Rendez-vous et état live)
    match /sessions/{sessionId} {
      // Lecture : Autorisée si on est le propriétaire (client) de la session, ou l'hôte (admin).
      allow get: if isAuth() && (resource.data.userId == request.auth.uid || resource.data.hostId == request.auth.uid);
      // Liste : Autorisée si on filtre par son propre userId, ou si on est admin.
      allow list: if (isAuth() && request.query.where.get('userId', null) == request.auth.uid) || isAdmin();
      // Création : Autorisée si on crée une session pour soi-même.
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      // Mise à jour : Seul l'admin (hôte) peut modifier l'état d'une session en cours.
      allow update: if isAdmin();
      // Suppression : Seul l'admin peut supprimer une session.
      allow delete: if isAdmin();
    }

    // 8. Témoignages (/testimonials/{testimonialId})
    match /testimonials/{testimonialId} {
      allow read: if isAdmin();
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
    }

    // 9. Coupons (/coupons/{couponId})
    match /coupons/{couponId} {
      allow get: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }
  }
}
