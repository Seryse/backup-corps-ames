rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /formations/{formationId} {
      allow read: if true;
      // This should be restricted to admin users via custom claims in a real app.
      // For now, any authenticated user can write.
      allow write: if request.auth != null;
    }

    match /users/{userId}/formations/{formationId} {
      allow read, write: if isOwner(userId);
    }

    match /news/{newsId} {
      allow read: if true;
      // This should be restricted to admin users via custom claims in a real app.
      // For now, any authenticated user can write.
      allow write: if request.auth != null;
    }

    match /subtitles/{sessionId} {
      // Anyone authenticated can read subtitles
      allow read: if request.auth != null;
      // Writing should be restricted to admins in a real app.
      // For now, any authenticated user can write to facilitate testing.
      allow write: if request.auth != null;
    }

    match /sessionTypes/{sessionTypeId} {
      allow read: if true;
      allow write: if request.auth != null; // Admin only in production
    }

    match /timeSlots/{timeSlotId} {
      allow read: if true;
      allow write: if request.auth != null; // Admin only in production
    }

    match /users/{userId}/bookings/{bookingId} {
      allow read, write: if isOwner(userId);
    }
  }
}
