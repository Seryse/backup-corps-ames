rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && (
        request.auth.uid == 'HvsOFzrOwFTHWTBVBextpZtV5I53' || // seryse@live.be
        request.auth.token.email == 'jael@live.fr' ||
        request.auth.token.email == 'selvura@gmail.com'
      );
    }

    function isBookingIncrement(before, after) {
      return after.bookedParticipantsCount == before.bookedParticipantsCount + 1
          && after.sessionTypeId == before.sessionTypeId
          && after.startTime == before.startTime
          && after.endTime == before.endTime
          && after.keys().hasAll(['sessionTypeId', 'startTime', 'endTime', 'bookedParticipantsCount'])
          && after.keys().size() == 4;
    }

    match /formations/{formationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/formations/{userFormationId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    match /{path=**}/formations/{userFormationId} {
      allow read: if isAdmin();
    }

    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /subtitles/{sessionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /sessionTypes/{sessionTypeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /timeSlots/{timeSlotId} {
      allow read: if true;
      // Admin has full write access
      allow write: if isAdmin();
      // Any authenticated user can update a time slot IF they are just incrementing the count
      allow update: if request.auth != null && isBookingIncrement(resource.data, request.resource.data);
    }

    match /bookings/{bookingId} {
      // Admins can list all bookings.
      allow list: if isAdmin();
      
      // Admins can get any single booking document.
      // Users can only get their own booking documents.
      allow get: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);

      // Admins can create any booking.
      // Users can create a booking for themselves.
      allow create: if isAdmin() || (request.auth != null && request.resource.data.userId == request.auth.uid);

      // Admins can update/delete any booking.
      // Users can update/delete their own bookings.
      allow update, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }

    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /testimonials/{testimonialId} {
      allow read: if isAdmin();
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /coupons/{couponId} {
      allow get: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }
  }
}
