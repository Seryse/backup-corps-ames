rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // In a real app, this would check for a custom claim.
      return request.auth != null && request.auth.uid in ['HvsOFzrOwFTHWTBVBextpZtV5I53'];
    }

    match /formations/{formationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId}/formations/{userFormationId} {
      allow read, write: if isOwner(userId);
    }

    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /subtitles/{sessionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /sessionTypes/{sessionTypeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /timeSlots/{timeSlotId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId}/bookings/{bookingId} {
      allow write: if isOwner(userId);
      allow read: if isOwner(userId) || isAdmin();
    }

    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /testimonials/{testimonialId} {
      allow read: if isAdmin();
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /coupons/{couponId} {
      allow get: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }
  }
}
