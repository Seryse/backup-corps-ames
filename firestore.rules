rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // seryse@live.be, jael@live.fr, selvura@gmail.com
      return request.auth != null && 
        (request.auth.uid == 'HvsOFzrOwFTHWTBVBextpZtV5I53' || 
         request.auth.uid == 'anotherAdminUid1' || 
         request.auth.uid == 'anotherAdminUid2');
    }

    function isBookingIncrement(before, after) {
      return after.bookedParticipantsCount == before.bookedParticipantsCount + 1
          && after.sessionTypeId == before.sessionTypeId
          && after.startTime == before.startTime
          && after.endTime == before.endTime
          && after.keys().hasAll(['sessionTypeId', 'startTime', 'endTime', 'bookedParticipantsCount'])
          && after.keys().size() == 4;
    }

    match /formations/{formationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/formations/{userFormationId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    match /{path=**}/formations/{userFormationId} {
      allow read: if isAdmin();
    }

    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /subtitles/{sessionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /sessionTypes/{sessionTypeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /timeSlots/{timeSlotId} {
      allow read: if true;
      // Admin has full write access
      allow write: if isAdmin();
      // Any authenticated user can update a time slot IF they are just incrementing the count
      allow update: if request.auth != null && isBookingIncrement(resource.data, request.resource.data);
    }

    match /bookings/{bookingId} {
        // --- WRITE RULES ---
        allow write: if isAdmin();
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

        // --- READ RULES ---
        // GET: An admin can get any document. A user can get their own.
        allow get: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.userId);
        
        // LIST: An admin can list the entire collection for the admin panel.
        // User-side queries are implicitly allowed by the 'get' rule above, 
        // as Firestore checks if the query constraints match the rule for every document.
        allow list: if isAdmin();
    }


    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /testimonials/{testimonialId} {
      allow read: if isAdmin();
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /coupons/{couponId} {
      allow get: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }
  }
}
