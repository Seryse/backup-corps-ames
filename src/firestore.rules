rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---
    function isAuth() {
      return request.auth != null;
    }

    // Ton UID Admin (HvsOFzrOwFTHWTBVBextpZtV5I53)
    function isAdmin() {
      return isAuth() && request.auth.uid == "HvsOFzrOwFTHWTBVBextpZtV5I53"; 
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isBookingIncrement(before, after) {
      return after.bookedParticipantsCount == before.bookedParticipantsCount + 1
          && after.sessionTypeId == before.sessionTypeId
          && after.startTime == before.startTime
          && after.endTime == before.endTime
          && after.keys().hasAll(['sessionTypeId', 'startTime', 'endTime', 'bookedParticipantsCount'])
          && after.keys().size() == 4;
    }

    // --- Règles par Collection ---

    // Utilisateurs (UserProfile)
    match /users/{userId} {
      allow get, write: if isOwner(userId);
      allow list, get: if isAdmin();
    }

    // Formations acquises par l'utilisateur
    match /users/{userId}/formations/{userFormationId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /{path=**}/formations/{userFormationId} {
        allow read: if isAdmin();
    }

    // Catalogue de formations
    match /formations/{formationId} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // Actualités
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Types de session
    match /sessionTypes/{sessionTypeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Créneaux horaires
    match /timeSlots/{timeSlotId} {
      allow read: if true;
      allow write: if isAdmin();
      allow update: if isAuth() && isBookingIncrement(resource.data, request.resource.data);
    }

    // Réservations (Bookings)
    match /bookings/{bookingId} {
      allow read, write: if isAdmin();
      allow read: if isAuth() && resource.data.userId == request.auth.uid;
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    // État de la session en direct (LiveSession) - Règle SÉCURISÉE
    match /sessions/{sessionId} {
      // L'hôte (admin) OU le client peut lire l'état de la session.
      allow read: if isAuth() && (resource.data.hostId == request.auth.uid || resource.data.userId == request.auth.uid);
      // Seul l'admin peut modifier l'état.
      allow write: if isAdmin();
    }

    // Témoignages
    match /testimonials/{testimonialId} {
      allow read: if isAdmin();
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
    }

    // Coupons
    match /coupons/{couponId} {
      allow get: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }
    
     match /subtitles/{sessionId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
