rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---

    function isAuth() {
      return request.auth != null;
    }

    // L'UID 'HvsOFzrOwFTHWTBVBextpZtV5I53' correspond à seryse@live.be
    function isAdmin() {
      return isAuth() && request.auth.uid == 'HvsOFzrOwFTHWTBVBextpZtV5I53';
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isBookingIncrement(before, after) {
      return after.bookedParticipantsCount == before.bookedParticipantsCount + 1
          && after.sessionTypeId == before.sessionTypeId
          && after.startTime == before.startTime
          && after.endTime == before.endTime;
    }

    // --- Règles par Collection ---

    // Utilisateurs (UserProfile)
    match /users/{userId} {
      allow get, update, write: if isOwner(userId);
      // L'admin peut lister tous les utilisateurs (pour les statistiques) et lire n'importe quel profil.
      allow list, get: if isAdmin();
    }

    // Formations acquises par l'utilisateur (UserFormation)
    match /users/{userId}/formations/{userFormationId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Règle pour la requête collectionGroup sur 'formations' (pour les statistiques)
    match /{path=**}/formations/{userFormationId} {
      allow read: if isAdmin();
    }

    // Catalogue des Formations
    match /formations/{formationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Actualités (NewsArticle)
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Types de session (SessionType)
    match /sessionTypes/{sessionTypeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Créneaux horaires (TimeSlot)
    match /timeSlots/{timeSlotId} {
      allow read: if true;
      allow write: if isAdmin();
      allow update: if isAuth() && isBookingIncrement(resource.data, request.resource.data);
    }

    // Réservations (Booking)
    match /bookings/{bookingId} {
      // Seul l'admin peut lister TOUTE la collection
      allow list: if isAdmin();
      // Un utilisateur peut lire une réservation si c'est la sienne. L'admin aussi.
      allow get: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      // Un utilisateur peut créer/modifier/supprimer ses propres réservations.
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuth() && resource.data.userId == request.auth.uid;
       // L'admin peut écrire/modifier/supprimer n'importe quelle réservation.
      allow write: if isAdmin();
    }

    // État de la session en direct (LiveSession)
    match /sessions/{sessionId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Témoignages (Testimonial)
    match /testimonials/{testimonialId} {
      allow read: if isAdmin();
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
    }

    // Coupons
    match /coupons/{couponId} {
      allow get: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }
  }
}
